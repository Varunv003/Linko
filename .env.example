# =======================================
# ENVIRONMENT CONFIGURATION FOR LINKO APP 
# =======================================
# --- MySQL Container Setup ---
# These variables are used ONCE by the MySQL container to initialize itself.
MYSQL_ROOT_PASSWORD=my_even_more_secret_root_password_456
MYSQL_DATABASE=url_shortner
MYSQL_USER=url_shortner_user
MYSQL_PASSWORD=my_super_secret_password_123

# --- Spring Boot Datasource Connection ---
# These variables are used by your Spring Boot app to connect to the database.
# The user/password MUST MATCH the MYSQL_USER/MYSQL_PASSWORD above.
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/url_shortner
SPRING_DATASOURCE_USERNAME=url_shortner_user
SPRING_DATASOURCE_PASSWORD=my_super_secret_password_123

# --- Redis Connection ---
# The hostname 'redis' matches the service name in your docker-compose.yml
SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379

# --- JPA / Hibernate Behavior ---
SPRING_JPA_HIBERNATE_DDL_AUTO=update
# 'true' is useful for debugging SQL queries locally. Use 'false' in production.
SPRING_JPA_SHOW_SQL=false

# --- JWT Secrets ---
# Use a long, random, base64-encoded string for production secrets
JWT_SECRET=jwt-secret-key-that-is-long-and-secure
JWT_EXPIRATION=86400000 # 24 hours in milliseconds

# --- Logging Levels ---
# Set to DEBUG for verbose local development, change to INFO or WARN for production
LOGGING_LEVEL_SPRING=INFO
LOGGING_LEVEL_APP=INFO
LOGGING_LEVEL_SECURITY=INFO